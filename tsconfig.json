{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "alwaysStrict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}